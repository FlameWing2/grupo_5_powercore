<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head',{'titulo':datos.titulo}) %>
    

</head>
<body>
  <div id="loader"></div>
    <header>
        <div class="contenedor-header" >
          <div id="logo" class="logo-header img-header">
            <img id="logo1" src="/images/PowerCore.svg" alt="PowerCore">
            <img id="logo2" src="/images/PowerCore_large.svg" alt="PowerCore">
          </div>
          <div id="search" class="form-search">
            <form class="header-form" action="#" method="GET">
              <input class="search-bar" placeholder="Buscar productos, marcas y más" type="search">
              <button class="search-bar-icon" type="submit"><i class="fa fa-search"></i></button>
            </form>
          </div>
        </div>
        <div class="contenedor-nav">
  
          <nav class="header-nav">
            <ul class="nav-bar">
              <li><a href="/">Inicio</a></li>
             <!-- <li><a href="#">Productos</a></li> -->
              <li><a href="/contact">Contacto</a></li>
            </ul>
            <ul class="nav-bar">
              <li><a href="/users/register">Registrarse <i class="fa-regular fa-id-card"></i></a></li>
              <li><a href="/users/login">Ingresar <i class="fas fa-user" onclick="toggleUserMenu()"></i></a></li>
              <li><a href="/products/cart">Ver Pedidos <i class="fas fa-shopping-cart"></i></a></li>
            </ul>
          </nav>
        </div>
        <div class="mob__navbar">
          <div class="nav-item home">
            <a href="/">
              <img class="img-nav" src="/images/PowerCore.svg" alt="">
            </a>
          </div>
          <div class="nav-item">
            <button class="search__mobile">
              <i class="fa-solid fa-magnifying-glass"></i>
  
            </button>
          </div>
          <div class="nav-item">
            <a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i>
              <br>
              Contacto</a>
          </div>
          <div class="nav-item">
            <i class="fa-solid fa-bars"></i>
            Menu
          </div>
        </div>
      </header>
    <section class="content">
        <div class="container-fluid">
            <div class="row" style="display: flex; justify-content: center;">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Póngase en contacto con nuestro equipo</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- activo mensaje si hace post -->
                        <% if(datos.msg){ %>
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h5><i class="icon fas fa-check"></i> Gracias por su consulta!</h5>
                                <%= datos.msg %>
                              </div>
                        <% } %>
                        <!-- form start -->
                        <form action="/contact" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese Nombre" required>
                                </div>
                                <div class="form-group">
                                    <label for="apellido">Apellido</label>
                                    <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Ingrese Apellido" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Correo</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese correo electronico" required>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label for="email">Departamento</label>
                                    <select class="form-control" name="departamento">
                                        <option>Venta</option>
                                        <option>Reparación</option>
                                        <option>Consulta 1 - a determinar</option>
                                        <option>Consulta 2 - a determinar</option>
                                        <option>Consulta 3 - a determinar</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="email">Ingrese su consulta</label>
                                    <textarea name="observacion" class="form-control" cols="10" rows="5"></textarea>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Enviar Consulta</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./partials/footer',{'pie':datos.pie}) %>
    <%- include('./partials/script') %>
</body>
</html>