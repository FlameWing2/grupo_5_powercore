<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head',{'titulo':datos.titulo}) %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

</head>
<body>
    <%- include('../partials/headers',{ infoUsuario: infoUsuario }) %>
    <section class="content">
        <div class="container-fluid">
            <div class="row" style="display: flex; justify-content: center;">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Crear Producto Nuevo</h3>
                        </div>
                        <!-- /.card-header -->
                           <!-- activo mensaje si hace post -->
                        <% if(datos.msg!=""){ %>
                          <div class="alert alert-success alert-dismissible">
                              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                              <h5><i class="icon fas fa-check"></i> Crear Producto Nuevo</h5>
                              <%= datos.msg %>
                            </div>
                      <% } %>
                        <!-- form start -->
                        <form action="/admin/register" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Descripción</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Precio</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Código del Producto</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Imagen</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Precio General</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Precio  de Contado</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <label for="name">Precio de MercadoPago</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                                </div>
                                <div class="form-group">
                                    <select class="form-control" name="cateogria">
                                        <option>Laptops</option>
                                        <option>Accessories</option>
                                        <option>Desktops</option>
                                        <option>Gamers</option>
                                        <option>Extras</option>
                                    </select>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Crear Producto</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer',{'pie':datos.pie}) %>
    <%- include('../partials/script') %>
</body>
</html>