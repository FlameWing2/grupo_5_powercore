<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body>
    <section class="container"></section>
    <section class="page">
        <%- include('../partials/acciones_admin') %>
        <%- include('../partials/headers') %>
        
        <main class="main">
            <div class="separador"></div>
            <section class="producto-detalle">
                <article class="producto-detalle-info">
                    <div class="control-admin">
                        <h4>Panel Admin</h4>
                        <ul class="menu-admin">
                            <li><a href="/admin/editar_producto" class="edit"><i class="fas fa-edit"></i> Editar</a></li>
                            <li><a href="#" class="delete"><i class="fas fa-trash"></i> Eliminar</a></li>
                        </ul>
                    </div>
                    <div class="producto-detalle-imagen">
                        <img src="/images/productos/weapon_samurai_longsword_i00.png">
                    </div>
                    <div class="producto-detalle-descripcion">
                        <div class="top">
                            <h3 class="titulo-detalle">Archangel Sword</h3>
                            <div class="producto-detalle-tipo-pago">
                                <div class="tipo-pago tamanio">
                                    <button class="btn-tipo-pago">
                                        <span class="producto-precio-oro">5000 Adenas</span>
                                        <img src="/images/productos/adena.png" alt="adena">
                                    </button>
                                </div>
                                <div class="tipo-pago tamanio">
                                    <button class="btn-tipo-pago">
                                        <span class="producto-precio-oro">$2.20 Pesos/Dolar</span>
                                        <img src="/images/productos/dolar.png" alt="adena">
                                    </button>
                                </div>
                            </div>
                            <div class="control-cantidad">
                                <label>Cantidad a Comprar: </label>
                                <div>
                                    <button class="btn-restar">-</button>
                                    <input type="text" class="cantidad-comprada" value="1" min="1" />
                                    <button class="btn-sumar">+</button>
                                </div>
                            </div>
                        </div>
                        <div class="control-botones">
                            <button class="control-btn blanco"><i class="fas fa-shopping-cart"></i> Agregar al Carrito</button>
                        </div>
                        
                    </div>
                </article>
            </section>
            <section class="informacion-del-producto">
                <div class="titulo-block">
                    <i class="fa-solid fa-tags"></i> Detalle
                </div>
                <article class="detalle-producto">
                    <ul class="product-stats">
                        <li><strong>Name: </strong><span class="value">Archangel Sword</span></li>
                        <li><strong>Sword: </strong><span class="value">One Handed</span></li>
                        <li>P Atk: <span class="value">194</span></li>
                        <li>M Atk: <span class="value">99</span></li>
                        <li>Atk Spd: <span class="value">379</span></li>
                        <li>SoulShots: <span class="value">1</span></li>
                        <li>SpiritShots: <span class="value">1</span></li>
                        <li>Weight: <span class="value">1350</span></li>
                        <li>Bestows one of the following functions: Focus, Critical Damage or Haste.</li>
                    </ul>
                    
                </article>
            </section>
        </main>
        
        <%- include('../partials/footers') %>
    </section>

    <!-- script -->
    <%- include('../partials/scripts') %>
</body>
</html>